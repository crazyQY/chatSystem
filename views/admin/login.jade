extends ../adminLayout
block headPartialBlock
    link(rel="stylesheet",href="/stylesheets/adminStyle.css")
block bodyPartialBlock
    #logo(class="text-center")
        h2 匿名聊天室后台管理系统
    #loginbox
        form.form-horizontal(id="loginform",action="/admin/login",method="post")
            if(err)
                p #{err}
            else
                p 请输入账户和密码登入
            .form-group
                .col-sm-10(class="col-sm-offset-1")
                    .input-group(class="input-group-sm")
                        span.input-group-addon 账户
                        input.form-control(name="username",placeholder="请输入账户名称")
            .form-group
                .col-sm-10(class="col-sm-offset-1")
                    .input-group(class="input-group-sm")
                        span.input-group-addon 密码
                        input.form-control(name="password",type="password",placeholder="请输入账户密码")
            .form-group
                div(class="col-sm-offset-5 col-sm-2")
                    button(type="submit",class="btn btn-danger")
                        span(class="glyphicon glyphicon-log-in")
                        |&nbsp;登录
block footPartialBlock
    script.
      if(location!=top){
        top.href=location.href;
      }